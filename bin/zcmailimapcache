use warnings;
use strict;
use ZConf::Mail;
use Getopt::Std;
use Mail::Cache;
use Mail::IMAPTalk::MailCache;


$Getopt::Std::STANDARD_HELP_VERSION=1;

#version function
sub main::VERSION_MESSAGE {
        print "curses-zcmailimapclient 0.0.0\n";
};

#print help
sub main::HELP_MESSAGE {
        print "\n".
		      "-s <set>  The set to operate on.\n".
		      "-a <account>  The account to act on.\n".
			  "-f <folder>  The folder to operate on.\n".
			  "-A  Process all subscriped folders.\n";
		exit 1;
};

#gets the options
my %opts=();
getopts('s:a:f:A', \%opts);


#initializes it
my $mail=ZConf::Mail->new;

if (!defined($opts{a})) {
	$opts{a}=$mail->defaultImapGet;
	if (!defined($opts{a})) {
		warn('zcmailimapcache: No default IMAP account defined.');
		exit 255;
	}
}

my $imap=$mail->connectIMAP($opts{a});
if ($mail->{error}) {
	warn('curses-zcmailimapclient: Failed to connect to the IMAP server.'
		 .'error="'.$mail->{error}.'" errorString="'.$mail->{errorString}.'"');
	exit $mail->{error};
}

#
my %avars=$mail->getAccountArgs($opts{a});

my $toselect='INBOX';

if (defined($opts{f})) {
	$toselect=$opts{f};
}

my $mcaccount=$opts{a};
$mcaccount=~s/^imap\///;

my $mc=Mail::Cache->new;

if (defined($opts{A})) {
	my $subs=$imap->lsub('', '*');

#	use Data::Dumper;
#	print Data::Dumper->Dump($subs);

	my $int=0;
	while (defined($subs->[$int])) {
		print 'processing '.$subs->[$int][2]."\n";

		my $select=$imap->select($subs->[$int][2]);
		
		if (!$select) {
			warn('zcmailimapcache: Failed to select "'.$subs->[$int][2].'"');
			exit 254;
		}
		
		$mc->init('ZConf::Mail', 'imap', $mcaccount, $subs->[$int][2]);
		
		#cache it
		my %returned=Mail::IMAPTalk::MailCache->cache($imap, $mc, 0);		
		
		$int++;
	}
	

}else {
	my $select=$imap->select($toselect);
	
	if (!$select) {
		warn('zcmailimapcache: Failed to select "'.$toselect.'"');
		exit 254;
	}
	
	$mc->init('ZConf::Mail', 'imap', $mcaccount, $toselect);
	
	#cache it
	my %returned=Mail::IMAPTalk::MailCache->cache($imap, $mc, 0);
	
	#exits with what ever the returned error int was
	#0 is good... see the docs for Mail::IMAPTalk::MailCache for others
	exit $returned{error};
}

=head1 NAME

zcmailimapcache - Update a Mail::Cache cache for a IMAP account.

=head1 SYNOPSIS

zcgetmail [B<-s> <set>] B<-a> <account> [B<-A>] [B<-f> <folder>]

=head1 DESCRIPTION

Either -A or -f needs given.

This can take a while to run for the first time if you have a large IMAP
setup.

=head1 SWITCHES

=head2 B<-a> <account>

This is the account to do the caching for.

=head2 B<-A>

Handle the caching for all subscribed folders.

=head2 B<-f> <folder>

Just do the caching on this folder.

