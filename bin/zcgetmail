use warnings;
use strict;
use ZConf::Mail;
use Getopt::Std;

$Getopt::Std::STANDARD_HELP_VERSION=1;

#version function
sub main::VERSION_MESSAGE {
        print "zcgetmail 0.0.0\n";
};

#print help
sub main::HELP_MESSAGE {
        print "\n".
		      "-a account\n";
		exit 1;
};

#gets the options
my %opts=();
getopts('a:', \%opts);
my %args;

#makes sure that -a is defined
if (!defined($opts{a})) {
	warn('zcgetmail: No account defined.');
	exit 1;
}

#initializes it
my $mail=ZConf::Mail->new;

#fetches it
my $fetched=$mail->fetch($opts{a});
if ($mail->{error}) {
	warn('zcgetmail: $mail->fetch("'.$opts{a}.'") failed. $mail->{error}="'.
		 $mail->{error}.'" $mail->{errorString}="'.$mail->{errorString}.'"');
	exit $mail->{error};
}else {
	print "fetched '".$fetched."' for the account '".$opts{a}."'\n";
}

if ($mail->{error}) {
	exit $mail->{error};
}

exit 0;

